#!/usr/bin/env python

Import("env")

import imgui_fonts_generate

env.add_source_files(env.scene_sources, "*.cpp")

env["BUILDERS"]["MakeImguiFontsBuilder"] = Builder(
    action=env.Run(
        imgui_fonts_generate.make_imgui_fonts_action
    ),
    suffix=".h",
    src_suffix=".ttf",
)

# Default imgui fonts
font_sources = Glob("*.ttf")

env.Alias(
    "imgui_fonts",
    [env.MakeImguiFontsBuilder("#modules/imgui/thirdparty/fonts/imgui_fonts.gen.h", font_sources)],
)
